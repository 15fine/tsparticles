        "distance": 400,
        "size": 40,
        "duration": 2,
        "opacity": 0.8
      },
      "repulse": {
        "distance": 200
      },
      "push": {
        "particles_nb": 4
      },
      "remove": {
        "particles_nb": 2
      }
    }
