{
  "fpsLimit": 60,
  "particles": {
    "number": {
      "value": 80,
      "density": {
        "enable": true,
        "value_area": 800
      }
    },
    "color": {
      "value": "#ff0000",
      "animation": {
        "enable": true,
        "speed": 20,
        "sync": true
      }
    },
    "shape": {
      "type": "circle",
      "stroke": {
        "width": 0
      },
      "polygon": {
        "nb_sides": 5
      },
      "image": {
        "src": "https://cdn.matteobruni.it/images/particles/github.svg",
        "width": 100,
        "height": 100
      }
    },
    "opacity": {
      "value": {
        "max": 0.5,
        "min": 0.1
      },
      "random": false,
      "animation": {
        "enable": true,
        "speed": 0.5,
        "sync": false
      }
    },
    "size": {
      "value": {
        "max": 3,
        "min": 0.1
      },
      "random": true,
      "animation": {
        "enable": true,
        "speed": 5,
        "sync": false
      }
    },
    "links": {
      "enable": true,
      "distance": 100,
      "color": "#ffffff",
      "opacity": 0.4,
      "width": 1
    },
    "move": {
      "enable": true,
      "speed": {
        "max": 6,
        "min": 3
      },
      "direction": "none",
